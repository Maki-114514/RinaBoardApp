<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SecondDamageActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginStart="10dp"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="80dp"
				android:orientation="horizontal">

				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_mainPage"
					android:layout_marginStart="5dp"
					android:layout_marginTop="10dp"
					android:layout_height="50dp">
				</ImageButton>

				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_secondPage"
					android:layout_marginTop="10dp"
					android:layout_height="match_parent">
				</ImageButton>

				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_thirdPage"
					android:layout_marginTop="10dp"
					android:layout_marginEnd="5dp"
					android:layout_height="50dp">
				</ImageButton>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center">
				<Switch
					android:layout_width="wrap_content"
					android:id="@+id/sw_damageLightState"
					android:text="开/关光害"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					tools:ignore="UseSwitchCompatOrMaterialXml">
				</Switch>
				<Button
					android:layout_width="wrap_content"
					android:id="@+id/bt_updateWords"
					android:text="上传文字"
					android:layout_marginBottom="20dp"
					android:layout_height="wrap_content">
				</Button>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="8"
			android:layout_margin="20dp"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:text="输入你想显示的文字(非中文,如: Yeah Tiger!):"
				android:textSize="20sp"
				android:layout_height="wrap_content">
			</TextView>
			<EditText
				android:layout_width="match_parent"
				android:id="@+id/et_editWords"
				android:layout_margin="15dp"
				android:layout_height="wrap_content">
			</EditText>

		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_gravity="end"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:gravity="right">

				<ImageView
					android:layout_width="40dp"
					android:src="@drawable/battery_0"
					android:layout_marginEnd="10dp"
					android:id="@+id/iv_batteryDisplay"
					android:layout_height="40dp">
				</ImageView>

				<ImageView
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:src="@drawable/setting"
					android:id="@+id/bt_setting">
				</ImageView>
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>