<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginTop="20dp"
			android:layout_height="80dp"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent">
				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_mainPage"
					android:layout_marginStart="15dp"
					android:layout_marginTop="10dp"
					android:layout_height="match_parent">
				</ImageButton>
				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_secondPage"
					android:layout_marginTop="10dp"
					android:layout_height="50dp">
				</ImageButton>
				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_thirdPage"
					android:layout_marginTop="10dp"
					android:layout_height="50dp">
				</ImageButton>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:gravity="center"
				android:layout_marginEnd="20dp"
				android:layout_height="match_parent">
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginEnd="5dp"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="40dp"
						android:id="@+id/iv_batteryDisplay"
						android:src="@drawable/battery_0"
						android:layout_height="wrap_content">
					</ImageView>
					<TextView
						android:layout_width="wrap_content"
						android:id="@+id/tv_batteryVoltage"
						android:layout_marginStart="3dp"
						android:textSize="16sp"
						android:text="0.0V"
						android:layout_height="wrap_content">
					</TextView>
				</LinearLayout>
				<ImageView
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:src="@drawable/setting"
					android:id="@+id/bt_setting">
				</ImageView>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_height="140dp">
			<!--连接状态-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:gravity="center|bottom">
				<TextView
					android:layout_width="match_parent"
					android:gravity="center"
					android:id="@+id/tv_connectState"
					android:text="未连接"
					android:textSize="40sp"
					android:layout_height="wrap_content">
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="40dp">
				<TextView
					android:layout_width="match_parent"
					android:id="@+id/tv_deviceName"
					android:text=""
					android:textSize="30sp"
					android:layout_height="match_parent"
					android:gravity="center">

				</TextView>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="top">
				<TextView
					android:layout_width="match_parent"
					android:id="@+id/tv_deviceType"
					android:gravity="center|top"
					android:textSize="15sp"
					android:layout_height="match_parent">
				</TextView>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:gravity="center">
			<!--模式选择-->
			<Switch
				android:layout_width="wrap_content"
				android:text="表情模式"
				android:id="@+id/sw_expMod"
				android:enabled="false"
				android:checked="true"
				android:layout_marginHorizontal="5dp"
				android:layout_height="wrap_content"
				tools:ignore="UseSwitchCompatOrMaterialXml">
			</Switch>

			<Switch
				android:layout_width="wrap_content"
				android:text="视频模式"
				android:id="@+id/sw_videoMod"
				android:enabled="false"
				android:layout_marginHorizontal="5dp"
				android:layout_height="wrap_content"
				tools:ignore="UseSwitchCompatOrMaterialXml">
			</Switch>

			<Switch
				android:layout_width="wrap_content"
				android:text="同步模式"
				android:id="@+id/sw_recognitionMod"
				android:enabled="false"
				android:layout_marginHorizontal="5dp"
				android:layout_height="wrap_content"
				tools:ignore="UseSwitchCompatOrMaterialXml">
			</Switch>


		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:gravity="center">
			<Button
				android:layout_width="wrap_content"
				android:id="@+id/bt_lastExp"
				android:enabled="false"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:text="上一个表情">
			</Button>
			<Button
				android:layout_width="wrap_content"
				android:id="@+id/bt_nextExp"
				android:enabled="false"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:text="下一个表情">
			</Button>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:text="璃奈板:"
				android:textColor="@color/black"
				android:textSize="23sp"
				android:layout_marginStart="10dp"
				android:layout_height="wrap_content"
				android:layout_weight="1">
			</TextView>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/bt_resetColor"
				android:text="重置颜色"
				android:textSize="20sp"
				android:layout_marginEnd="15dp"
				android:layout_gravity="end"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginBottom="15dp"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:text="颜色"
				android:textColor="@color/black"
				android:textSize="20sp"
				android:layout_marginStart="15dp"
				android:layout_marginEnd="10dp"
				android:layout_height="wrap_content">
			</TextView>
			<Button
				android:id="@+id/bt_selectColor"
				android:layout_width="20dp"
				android:background="#FF1493"
				android:layout_height="20dp">
			</Button>
			<TextView
				android:layout_width="wrap_content"
				android:text="亮度"
				android:textColor="@color/black"
				android:textSize="20sp"
				android:layout_marginStart="20dp"
				android:layout_height="wrap_content">
			</TextView>
			<SeekBar
				android:layout_width="match_parent"
				android:id="@+id/sb_boardBrightness"
				android:max="150"
				android:progress="75"
				android:layout_height="match_parent">
			</SeekBar>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:text="猫耳朵:"
				android:textColor="@color/black"
				android:textSize="23sp"
				android:layout_marginStart="10dp"
				android:layout_height="wrap_content">
			</TextView>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">
			<Switch
				android:layout_width="wrap_content"
				android:text="开关"
				android:id="@+id/sw_lightState"
				android:checked="true"
				android:textSize="20sp"
				android:layout_marginStart="15sp"
				android:layout_height="wrap_content"
				tools:ignore="UseSwitchCompatOrMaterialXml">

			</Switch>
			<TextView
				android:layout_width="wrap_content"
				android:text="亮度"
				android:textColor="@color/black"
				android:textSize="20sp"
				android:layout_marginStart="5dp"
				android:layout_height="wrap_content">
			</TextView>
			<SeekBar
				android:layout_width="match_parent"
				android:id="@+id/sb_lightBrightness"
				android:max="255"
				android:progress="127"
				android:layout_height="match_parent">
			</SeekBar>
		</LinearLayout>

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>