<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SecondVideoActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginStart="10dp"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="80dp"
				android:orientation="horizontal">

				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_mainPage"
					android:layout_marginStart="5dp"
					android:layout_marginTop="10dp"
					android:layout_height="50dp">
				</ImageButton>

				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_secondPage"
					android:layout_marginTop="10dp"
					android:layout_height="match_parent">
				</ImageButton>

				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_thirdPage"
					android:layout_marginTop="10dp"
					android:layout_marginEnd="5dp"
					android:layout_height="50dp">
				</ImageButton>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center">

				<Button
					android:layout_width="wrap_content"
					android:id="@+id/bt_updateVideo"
					android:text="打开视频"
					android:layout_height="wrap_content">
				</Button>

				<Button
					android:layout_width="wrap_content"
					android:id="@+id/bt_controlVideo"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:enabled="false"
					android:text="暂停播放"
					android:layout_height="wrap_content">
				</Button>

				<Switch
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/sw_rollBack"
					android:text="反转"
					android:layout_marginBottom="30dp"
					tools:ignore="UseSwitchCompatOrMaterialXml">
				</Switch>

			</LinearLayout>
		</LinearLayout>

		<RelativeLayout
			android:layout_width="0dp"
			android:layout_weight="8"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextureView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/tv_video"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="20dp">

			</TextureView>

			<ImageView
				android:layout_width="90dp"
				android:id="@+id/iv_processedImage"
				android:layout_alignParentTop="true"
				android:layout_marginTop="20dp"
				android:layout_alignParentEnd="true"
				android:layout_height="80dp">

			</ImageView>
			<!-- SeekBar 用于显示视频播放进度 -->
			<SeekBar
				android:id="@+id/sb_video"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="25dp"
				android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"
				android:progressBackgroundTint="#CCCCCC"
				android:splitTrack="false"
				android:progress="0"
				android:max="100"/>

		</RelativeLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_gravity="end"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:gravity="right">

				<ImageView
					android:layout_width="40dp"
					android:src="@drawable/battery_1"
					android:layout_marginEnd="10dp"
					android:id="@+id/iv_batteryDisplay"
					android:layout_height="40dp">
				</ImageView>

				<ImageView
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:src="@drawable/setting"
					android:id="@+id/bt_setting">
				</ImageView>
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>