<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SettingActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginTop="20dp"
			android:layout_height="80dp"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent">
				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_mainPage"
					android:layout_marginStart="15dp"
					android:layout_marginTop="10dp"
					android:layout_height="50dp">
				</ImageButton>
				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_secondPage"
					android:layout_marginTop="10dp"
					android:layout_height="50dp">
				</ImageButton>
				<ImageButton
					android:layout_width="40dp"
					android:id="@+id/bt_thirdPage"
					android:layout_marginTop="10dp"
					android:layout_height="50dp">
				</ImageButton>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:gravity="center"
				android:layout_marginEnd="20dp"
				android:layout_height="match_parent">
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginEnd="10dp"
					android:gravity="center_vertical">
					<ImageView
						android:layout_width="40dp"
						android:src="@drawable/battery_1"
						android:id="@+id/iv_batteryDisplay"
						android:layout_height="wrap_content">
					</ImageView>
					<TextView
						android:layout_width="wrap_content"
						android:id="@+id/tv_batteryVoltage"
						android:layout_marginStart="3dp"
						android:textSize="15sp"
						android:text="0.0V"
						android:layout_height="wrap_content">
					</TextView>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:gravity="center">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="设置"
				android:textColor="@color/black"
				android:textSize="35sp">
			</TextView>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="20dp"
			android:layout_marginTop="30dp"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:text="修改板名称(可中文):"
				android:textSize="16sp"
				android:layout_height="wrap_content">
			</TextView>

			<EditText
				android:layout_width="match_parent"
				android:id="@+id/et_deviceName"
				android:maxLines="1"
				android:maxLength="9"
				android:inputType="text"
				android:layout_height="wrap_content">
			</EditText>

		</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="20dp"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:text="修改板wifi(非中文) :"
				android:textSize="16sp"
				android:layout_height="wrap_content">
			</TextView>

			<EditText
				android:layout_width="match_parent"
				android:id="@+id/et_wifiSSID"
				android:maxLines="1"
				android:maxLength="10"
				android:inputType="text"
				android:layout_height="wrap_content">
			</EditText>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="20dp"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:text="修改板密码(非中文):"
				android:textSize="16sp"
				android:layout_height="wrap_content">
			</TextView>

			<EditText
				android:layout_width="match_parent"
				android:id="@+id/et_wifiPassword"
				android:maxLines="1"
				android:maxLength="10"
				android:inputType="textPassword"
				android:layout_height="wrap_content">
			</EditText>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center">
			<Button
				android:layout_width="wrap_content"
				android:id="@+id/bt_saveReboot"
				android:layout_height="match_parent"
				android:text="确认修改并重启">
			</Button>
		</LinearLayout>

	</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>